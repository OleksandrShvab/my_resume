<div>
  {{#with main}}
    <main>
      <section>
        {{> title data="All skills" big=true}}
        <ul>
        {{#each skills}}
          <li>
            {{name}}
            {{#if point includeZero=true}} ({{point}}) {{/if}}
            {{#if isTop}} (top) {{/if}}
            {{#unless point includeZero=true}} (не вивчав) {{/unless}}
            {{#unless point}}
              {{#if point includeZero=true}}
                (ще вивчаю)
              {{/if}}
            {{/unless}}

          </li>
        {{/each}}
        </ul>
      </section>
      <section>
        {{> title data="My hobbies"}}
        <ul>
        {{#each hobbies}}
          <li>
            {{name}}
            {{#if isMain}} (favourite) {{/if}}
          </li>
        {{/each}}
        </ul>
      </section>
    </main>
  {{/with}}
</div>