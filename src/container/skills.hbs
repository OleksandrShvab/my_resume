<main>
  <body>
    <header class="mb-5">
      {{#with page}}
        <h2>{{title}}</h2>
      {{/with}}
    </header>
    <section>
      {{#with main}}
        <div
          class='card mb-4 p-4'
          style='background-color:#e8ebcb;'
        >
          <div>
          {{> title data="All skills" big=true}}
          </div>
          <ul>
            {{#each skills}}
              <li>
                {{name}}
                {{#if point includeZero=true}} ({{point}}) {{/if}}
                {{#if isTop}} (top) {{/if}}
                {{#unless point includeZero=true}} (не вивчав) {{/unless}}
                {{#unless point}}
                  {{#if point includeZero=true}}
                    (ще вивчаю)
                  {{/if}}
                {{/unless}}
              </li>
            {{/each}}
          </ul>
        </div>
        <div
          class='card mb-4 p-4'
          style='background-color:#e8ebcb;'
        >
          <div>
          {{> title data="My hobbies"}}
            <ul>
              {{#each hobbies}}
                <li>
                  {{name}}
                  {{#if isMain}} (favourite) {{/if}}
                </li>
              {{/each}}
            </ul>
          </div> 
        </div>
      {{/with}}
    </section>
  </body>
</main>