{{#with footer}}
    <footer>
        <hr / class="my-4">
        <div>
            {{#with social}}
                {{> link href=email.href text=email.text blank=true }}
                {{> link href=phone.href text=phone.text blank=true }}
                {{> link href=LinkedIn.href text=LinkedIn.text blank=true }}
            {{/with}}
        </div>
        <div class="my-3">
            <em>Copyrite by {{../header.name.firstname}} {{../header.name.lastname}}</em>
        </div>
        <div>
            <em><address>{{../header.address}}</address></em>
        </div>
    </footer>
{{/with}}